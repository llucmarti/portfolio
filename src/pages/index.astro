---
import "./src/styles/global.css";
import SectionContainer from "../components/SectionContainer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";

import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
---

<Layout
  title="Lluc's portfolio - Software engineer"
  description="Lluc MartÃ­ Calveres is a software engineer with more than 3 years of experience, looking for new opportunities to grow and learn."
>
  <SectionContainer class="py-44 pb-24">
    <main>
      <img class="rounded-full w-12 h-12 mb-4" src="/lluc_4.jpg" alt="logo" />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, I'm Lluc <a
          href="https://www.linkedin.com/in/llucmc/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>available for hiring</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>Software engineer</span>
        <span class="text-yellow-200/90"
          >with more than 3 years of experience</span
        >,
        <span class="opacity-80"
          >trying to look for good oportunities to grow and learn.</span
        >
      </h2>

      <nav class="flex gap-x-4 mt-8">
        <SocialPill href="https://www.linkedin.com/in/llucmc/">
          <LinkedInIcon class="w-6 h-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/llucmarti">
          <GithubIcon class="w-6 h-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:lluc.marti.calveres@gmail.com">
          <MailIcon class="w-6 h-6" />
          lluc.marti.calveres@gmail.com
        </SocialPill>
      </nav>
    </main>
  </SectionContainer>

  <SectionContainer id="experience">
    <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
      <Briefcase class="size-7" />
      Experience
    </h2>
    <Experience />
  </SectionContainer>
</Layout>
